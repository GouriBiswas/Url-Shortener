<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>URL Shrinker</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #121212;
            color: white;
            padding-top: 50px;
        }

        .container {
            max-width: 800px;
            background: #1e1e1e;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 15px rgba(255, 255, 255, 0.1);
        }

        h1 {
            text-align: center;
            font-weight: 600;
            color: #17a2b8;
        }

        .form-control {
            background: #2a2a2a;
            border: none;
            color: white;
        }

        .form-control:focus {
            background: #333;
            color: white;
            border-color: #17a2b8;
            box-shadow: none;
        }

        .btn-success {
            background: #17a2b8;
            border: none;
            transition: 0.3s;
        }

        .btn-success:hover {
            background: #138496;
        }

        table {
            margin-top: 20px;
        }

        table th {
            color: #17a2b8;
        }

        table a {
            color: #17a2b8;
            text-decoration: none;
            transition: 0.3s;
        }

        table a:hover {
            color: #1dd3d3;
        }

        .short-url {
            background: #222;
            padding: 5px 10px;
            border-radius: 5px;
            display: inline-block;
        }

        .short-url:hover {
            background: #333;
        }

        
        /* Footer */
        .footer {
            text-align: center;
            padding: 15px;
            margin-top: 30px;
            background: #1e1e1e;
            border-radius: 10px;
            font-size: 14px;
            color: #888;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>URL Shrinker</h1>
        <form action="/shortUrls" method="POST" class="my-4 d-flex">
            <input required placeholder="Enter full URL..." type="url" name="fullUrl" id="fullUrl" class="form-control me-2">
            <button class="btn btn-success" type="submit">Shrink</button>
        </form>

        <table class="table table-dark table-striped text-center">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>
                <tr>
                    <td>
                        <a href="<%= shortUrl.full %>" target="_blank">
                            <%= shortUrl.full.length > 50 ? shortUrl.full.substring(0, 50) + "..." : shortUrl.full %>
                        </a>
                    </td>
                    <td>
                        <a href="/<%= shortUrl.short %>" class="short-url" target="_blank">
                            <%= shortUrl.short %>
                        </a>
                    </td>
                    <td><%= shortUrl.clicks %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>

        
       <!-- Footer -->
<div class="footer">
    Created by Gouri Biswasâš¡ 
</div>
    </div>
</body>
</html>
